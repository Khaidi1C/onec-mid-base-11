//@skip-check module-structure-method-in-regions
Процедура ДобавитьПолеКонтактноеЛицоПередОснованием(Форма)
	
	ЭлементВводаКонтактноеЛицо = Форма.Элементы.Вставить("КонтактноеЛицо", Тип("ПолеФормы"), ,Форма.Элементы.Основание);
	ЭлементВводаКонтактноеЛицо.ПутьКДанным = "Объект.ЮХ_КонтактноеЛицо";
	ЭлементВводаКонтактноеЛицо.Вид = ВидПоляФормы.ПолеВвода;
	
КонецПроцедуры //-- Юсупов Хайдар №4

//++ Юсупов Хайдар №5 
//@skip-check module-structure-method-in-regions
Процедура ДобавитьГруппуСкидки(Форма)

	ГруппаСкидки = Форма.Элементы.Вставить("ГруппаСкидки", Тип("ГруппаФормы"),,Форма.Элементы.Страницы);
	ГруппаСкидки.Вид = ВидГруппыФормы.ОбычнаяГруппа;
	ГруппаСкидки.ОтображатьЗаголовок = Ложь;

КонецПроцедуры //-- Юсупов Хайдар №5

//++ Юсупов Хайдар №6 
//@skip-check module-structure-method-in-regions
Процедура ДобавитьПолеСогласованнаяСкидка(Форма)

	ЭлементСогласованнаяСкидка = Форма.Элементы.Добавить("СогласованнаяСкидка", Тип("ПолеФормы"), Форма.Элементы.ГруппаСкидки);
	ЭлементСогласованнаяСкидка.ПутьКДанным = "Объект.ЮХ_СогласованнаяСкидка";
	ЭлементСогласованнаяСкидка.Вид = ВидПоляФормы.ПолеВвода;
	ЭлементСогласованнаяСкидка.УстановитьДействие("ПриИзменении", "ЮХ_СогласованнаяСкидкаПриИзменении");
	
КонецПроцедуры //-- Юсупов Хайдар №6

//++ Юсупов Хайдар №7 
//@skip-check module-structure-method-in-regions
Процедура ДобавитьКнопкуКомандуПрименитьСкидку(Форма)
	
	КомандаПрименитьСкидку = Форма.Команды.Добавить("КомандаПрименитьСкидку");
	КомандаПрименитьСкидку.Заголовок = "Применить скидку";
	КомандаПрименитьСкидку.Действие = "ЮХ_ПрименитьСкидку";
	
	КнопкаПрименитьСкидку = Форма.Элементы.Добавить("ПрименитьСкидку", Тип("КнопкаФормы"),Форма.Элементы.ГруппаСкидки);
	КнопкаПрименитьСкидку.Вид = ВидКнопкиФормы.ОбычнаяКнопка;
	КнопкаПрименитьСкидку.ИмяКоманды = "КомандаПрименитьСкидку";	

КонецПроцедуры //-- Юсупов Хайдар №7
